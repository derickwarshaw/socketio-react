{
  "extends": [
    "tslint:recommended",
    "tslint-react-hooks"
  ],
  "rules": {
    "max-line-length": {
      "options": [
        80
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "max-classes-per-file": false,
    "prettier": true,
    "react-hooks-nesting": "error",
    "object-literal-sort-keys": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}